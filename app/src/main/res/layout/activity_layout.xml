<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/lm1"
    android:background="#f9f9f9">

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_margin="3dp"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="9dp"
            android:onClick="cfinish"
            android:padding="2dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/note_edit_back" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="9dp"
            android:padding="2dp"
            android:onClick="cdelete"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/note_edit_recycle" />

    </LinearLayout>

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:textColor="#333333"
        android:inputType="textPersonName"
        android:hint="输入标题"
        android:background="#00000000"
        android:maxLength="15"
        android:text="" />

    <TextView
        android:id="@+id/dtextView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_margin="3dp" />

    <EditText
        android:id="@+id/editTextTextPersonName2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:hint="输入内容"
        android:gravity="left"
        android:layout_margin="3dp"
        android:background="#00000000"
        android:textColor="#555555"
        android:text="" />
</LinearLayout>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:onClick="csave"
        android:padding="2dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="11dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:src="@drawable/theme_item_selected" />
</RelativeLayout>
